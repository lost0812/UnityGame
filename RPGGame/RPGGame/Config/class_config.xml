<!--物品-------------------------------------------------------------------->
<class name="ItemConfig" comment="物品数据">
	<enum name="ItemType" comment="物品类型">
		<property name="ITEM_TYPE_NO"        value="0" comment="空类型"/>
		<property name="ITEM_TYPE_NORMAL"    value="1" comment="普通类型"/>
		<property name="ITEM_TYPE_EQUIPMENT" value="2" comment="武器类型"/>
		<property name="ITEM_TYPE_MAX"       value="3" comment="类型最大值"/>
	</enum>
	<property name="ID"   prefix="i" type="int" comment="编号"/>
	<property name="Type" prefix="e" type="ItemType" comment="类型"/>
	<string_property name="Name" prefix="s" type="string" comment="名字"/>
	<string_property name="Description" prefix="s" type="string"  comment="描述"/>
</class>


<class name="FrameConfig" comment="框数据">
    <macro name="MAX_OPTION_NUM" value="5" comment="选项最大数量"/>
	<property name="ID"   prefix="i" type="int" comment="编号"/>
	<property name="X"   prefix="i" type="int" comment="横坐标"/>
	<property name="Y"   prefix="i" type="int" comment="纵坐标"/>
	<property name="Width"   prefix="i" type="int" comment="宽度"/>
	<property name="Height"   prefix="i" type="int" comment="高度"/>
	<string_property name="Name"   prefix="s" type="string" comment="名称"/>
	<string_property name="Description"   prefix="s" type="string" comment="描述"/>
	<property name="HandleID"   prefix="i" type="int" comment="对应处理"/>
	<struct_property name="Option" max="MAX_OPTION_NUM" comment="选项">
		<string_property name="Description"   prefix="s" type="string" comment="选项描述"/>
		<property name="Notify"   prefix="i" type="int" comment="通知处理"/>
		<property name="FrameID"   prefix="i" type="int" comment="对应框ID"/>
		<property name="Data"   prefix="i" type="int" comment="选项数据"/>
	</struct_property>
</class>

<class name="MapConfig" comment="地图数据">
	<property name="ID"   prefix="i" type="int" comment="编号"/>
	<string_property name="Name"   prefix="s" type="string" comment="名称"/>
	<array_property name="ActionID" prefix="i" type="int" comment="行动"/>
</class>

<class name="MapActionConfig" comment="地图行为数据">
	<enum name="MapActionType" comment="地图行为类型">
		<property name="MAP_ACTION_TYPE_COLLECTION" value="1" comment="采集"/>
		<property name="MAP_ACTION_TYPE_HANTING" value="2" comment="狩猎"/>
	</enum>
	<property name="ID" prefix="i" type="int" comment="编号"/>
	<property name="Type" prefix="e" type="MapActionType" comment="类型"/>
	<string_property name="Name"   prefix="s" type="string" comment="名字"/>
	<string_property name="Description"   prefix="s" type="string" comment="描述"/>
	<property name="PowerCost" prefix="i" type="int" comment="消耗体力值"/>
	<property name="TimeCost" prefix="i" type="int" comment="消耗时间"/>
	<property name="Maxtime" prefix="i" type="int" comment="最大次数"/>
	<property name="Recovery" prefix="i" type="int" comment="恢复速度"/>
	<array_property name="MonsterID" prefix="i" type="int" comment="怪物"/>
	<array_property name="DropID" prefix="i" type="int" comment="掉落"/>
</class>

<class name="MonsterConfig" comment="怪物数据">
	<enum name="MonsterType" comment="怪物类型">
		<property name="MONSTER_TYPE_GENTLE" value="1" comment="温和"/>
		<property name="MONSTER_TYPE_NEUTRAL" value="2" comment="中立"/>
		<property name="MONSTER_TYPE_HOSTIL" value="3" comment="敌对"/>
	</enum>
	<property name="ID" prefix="i" type="int" comment="编号"/>
	<property name="Type" prefix="e" type="MonsterType" comment="类型"/>
	<string_property name="Name"   prefix="s" type="string" comment="名字"/>
	<string_property name="Description"   prefix="s" type="string" comment="描述"/>
	<property name="MaxHp" prefix="i" type="int" comment="生命上限"/>
	<property name="Attack" prefix="i" type="int" comment="攻击力"/>
	<property name="Defance" prefix="i" type="int" comment="防御力"/>
	<array_property name="DropID" prefix="i" type="int" comment="掉落"/>
</class>

<class name="DropConfig" comment="掉落">
	<property name="ID" prefix="i" type="int" comment="编号"/>
	<property name="ItemID" prefix="i" type="int" comment="物品编号"/>
	<property name="ItemNum" prefix="i" type="int" comment="物品数量"/>
</class>

<class name="ShopConfig" comment="掉落">
	<property name="ID" prefix="i" type="int" comment="编号"/>
	<property name="ItemID" prefix="i" type="int" comment="物品编号"/>
	<property name="ItemNum" prefix="i" type="int" comment="物品数量"/>
	<property name="Price" prefix="i" type="int" comment="价格"/>
	<property name="Discount" prefix="i" type="int" comment="物品数量"/>
</class>